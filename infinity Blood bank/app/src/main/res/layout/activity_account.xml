<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Account"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#fff">



    <ImageView
        android:id="@+id/logo_Image"
        android:layout_width="150dp"
        android:layout_height="106dp"
        android:src="@drawable/logo1"
        android:transitionName="logo_image" />


    <TextView
        android:id="@+id/logo_text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/tauri"
        android:text="Your Acount"
        android:textColor="@color/mycolor"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/logo_text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/tauri"
        android:text="Your Acount"
        android:textColor="@color/black"
        android:textSize="24sp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">


        <Button
            android:id="@+id/editac"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:background="#DF1D26"
            android:onClick="EditButtonClick"
            android:text="Edit Account"
            android:textColor="#FFFFFF"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/yreq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="#000000"
            android:onClick="YreqButtonClick"
            android:text="Your Requests"
            android:textColor="#FFFFFF"
            app:backgroundTint="@null" />


        <Button
            android:id="@+id/signout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:background="#DF1D26"
            android:onClick="SignOutButtonClick"
            android:text="Sign Out"
            android:textColor="#FFFFFF"
            app:backgroundTint="@null" />

    </LinearLayout>

</LinearLayout>